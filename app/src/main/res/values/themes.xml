<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.SpaceXCrew" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorSecondary">@color/subtle_primary_color</item>
        <item name="colorSecondaryVariant">@color/subtle_primary_color</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnError">@color/white</item>

        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="toolbarStyle">@style/Widget.SpaceXCrew.Toolbar</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="textAppearanceHeadline1">@style/TextAppearance.SpaceXCrew.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.SpaceXCrew.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.SpaceXCrew.Headline3</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.SpaceXCrew.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.SpaceXCrew.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.SpaceXCrew.Body1</item>
    </style>

    <style name="Widget.SpaceXCrew.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?android:colorBackground</item>
        <item name="android:elevation">@dimen/toolbar_elevation</item>
        <item name="titleTextAppearance">@style/TextAppearance.SpaceXCrew.Headline1</item>
    </style>

    <style name="Widget.SpaceXCrew.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@drawable/bg_bottom_navigation</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.SpaceXCrew.Subtitle2</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.SpaceXCrew.Subtitle2</item>
        <item name="itemIconTint">@color/bottom_navigation_item</item>
        <item name="itemTextColor">@color/bottom_navigation_item</item>
    </style>

    <style name="Widget.SpaceXCrew.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/background_color</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="strokeColor">@color/cardview_light_background</item>
        <item name="strokeWidth">@dimen/outline</item>
    </style>

    <style name="TextAppearance.SpaceXCrew.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/headline1</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="TextAppearance.SpaceXCrew.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/headline2</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="TextAppearance.SpaceXCrew.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/headline3</item>
        <item name="android:textColor">@color/subtle_primary_color</item>
    </style>

    <style name="TextAppearance.SpaceXCrew.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/subtitle1</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="TextAppearance.SpaceXCrew.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/subtitle2</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="TextAppearance.SpaceXCrew.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/body1</item>
        <item name="android:textColor">@color/subtle_primary_color</item>
    </style>

    <style name="TextAppearance.SpaceXCrew.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/body2</item>
        <item name="android:textColor">@color/subtle_primary_color</item>
    </style>

    <style name="ShapeAppearance.SpaceXCrew.Avatar" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/list_item_avatar_radius</item>
    </style>

    <style name="Widget.SpaceXCrew.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundColor">@color/background_color</item>
        <item name="android:paddingTop">@dimen/medium_space</item>
        <item name="android:paddingBottom">@dimen/medium_space</item>
        <item name="strokeColor">@color/cardview_light_background</item>
        <item name="strokeWidth">@dimen/outline</item>
    </style>
</resources>
